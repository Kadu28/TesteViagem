<body>

<h1>Controle de Viagem para Porto Seguro - Reinião dos Pombos</h1>

<form id="paymentForm">
    <label for="name">Nome:</label>
    <input type="text" id="name" required>

    <label for="paymentAmount">Valor do Pagamento (R$):</label>
    <input type="number" id="paymentAmount" required>

    <label for="paymentDate">Data do Pagamento:</label>
    <input type="date" id="paymentDate" required>

    <button type="button" onclick="addPayment()">Confirmar Pagamento</button>
</form>

<table>
    <thead>
        <tr>
            <th>Nome</th>
            <th>Valor do Pagamento</th>
            <th>Data do Pagamento</th>
        </tr>
    </thead>
    <tbody id="paymentTableBody">
        <!-- Os dados serão adicionados dinamicamente aqui -->
    </tbody>
</table>

<script>
    function addPayment() {
        var name = document.getElementById("name").value;
        var paymentAmount = document.getElementById("paymentAmount").value;
        var paymentDate = document.getElementById("paymentDate").value;

        // Validar os dados antes de adicioná-los à tabela

        var tableBody = document.getElementById("paymentTableBody");
        var newRow = tableBody.insertRow(tableBody.rows.length);

        var cell1 = newRow.insertCell(0);
        var cell2 = newRow.insertCell(1);
        var cell3 = newRow.insertCell(2);

        cell1.innerHTML = name;
        cell2.innerHTML = "R$ " + paymentAmount;
        cell3.innerHTML = paymentDate;

        // Limpar o formulário após adicionar o pagamento
        document.getElementById("paymentForm").reset();
    }
</script>

